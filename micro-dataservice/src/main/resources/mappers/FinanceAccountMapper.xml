<mapper namespace="com.bjpowernode.microdataservice.mapper.FinanceAccountMapper">
  <resultMap id="BaseResultMap" type="com.bjpowernode.api.po.FinanceAccount">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="uid" jdbcType="INTEGER" property="uid" />
    <result column="available_money" jdbcType="DECIMAL" property="availableMoney" />
  </resultMap>
  <sql id="Base_Column_List">
    id,uid,available_money
  </sql>
<!--  自定义sql-->


  <insert id="insertUidAndMoney">
    insert into u_finance_account(uid, available_money) values(
    #{uid},#{availableMoney}
    )
  </insert>

  <select id="selectByUid" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/>
 from u_finance_account where uid=#{uid}
  </select>


  <select id="selectAccountByUIdForUpDate" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/>
    from u_finance_account where uid=#{uid}
    for update

  </select>

<!--//更新金额-->
  <update id="updateAccountMoney">
    update  u_finance_account set available_money=available_money-#{bidMoney}
    where uid=#{uid} and (available_money-#{bidMoney}>=0)
  </update>

<!--充值对应的更新金额-->
  <update id="updateAccountMoneyInc">
    update  u_finance_account set available_money=available_money+#{rechargeMoney}
    where uid=#{uid}
  </update>




